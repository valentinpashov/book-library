<section id="details-page">

    <div class="main_card">
        <div class="card_left">
            <div class="card_datails">

                <h1>{{movie.place}}</h1>
                <div class="card-movie">
                    <div class="first-info">
                        <p class="card-price">Price: {{movie.price}}</p>
                        <p class="card-purpose">Purpose: {{movie.purpose}}</p>

                    </div>
                    <div class="second-info">

                        <p class="card-year">Year: {{movie.year}}</p>
                        <p class="card-ranking">Rating: <span id="stars">{{{showRating movie.rating}}}</span></p>
                    </div>

                </div>

                <p class="disc">Description: {{movie.description}}</p>
            </div>
        </div>
        <div class="card_right">
            <img src="{{movie.imageUrl}}" alt="{{movie.place}}">
        </div>
    </div>

</section>